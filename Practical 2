CREATE TABLE FACTORY (
    CITY VARCHAR(100) PRIMARY KEY,
    THROUGHPUT NUMBER(20)
);

INSERT INTO FACTORY VALUES ('NEW DELHI', 25);
INSERT INTO FACTORY VALUES ('DEF', 30);
INSERT INTO FACTORY VALUES ('KNFK', 28);

CREATE TABLE EMPLOYEE (
    ID NUMBER(20) PRIMARY KEY,
    NAME VARCHAR(255),
    POSITION VARCHAR(255),
    PAYRATE NUMBER(5),
    PAYTYPE VARCHAR(25),
    CITY VARCHAR(100),
    FOREIGN KEY (CITY) REFERENCES FACTORY(CITY),
    SUPERVISOR_ID NUMBER(20),
    FOREIGN KEY (SUPERVISOR_ID) REFERENCES EMPLOYEE(ID)
);

INSERT INTO EMPLOYEE VALUES (123, 'Ravi Sharma', 'Manager', 40, 'Salary', 'NEW DELHI', NULL);
INSERT INTO EMPLOYEE VALUES (456, 'Sneha Patel', 'Team Lead', 35, 'Salary', 'NEW DELHI', 123);
